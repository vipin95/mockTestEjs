<% layout('../layout.ejs') %>

<div class="content-wrapper">
        <!-- Container-fluid starts -->
       <div class="container-fluid">
        <!-- Row Starts -->
        <div class="row">
            <div class="col-sm-12 p-0">
                <div class="main-header">
                        <div class="page-header-title">
                            <h3 class="m-b-10">Test result</h3>
                        </div>
                    <ol class="breadcrumb breadcrumb-title breadcrumb-arrow">
                        <li class="breadcrumb-item"><a href="index.html"><i class="icofont icofont-home"></i></a>
                        </li>
                        <li class="breadcrumb-item"><a href="/">
                            <spam style="color: #fff;">test > result</spam></a>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
        <!-- Row end -->
        <div class="row">
            <div class="col-lg-12 col-md-12 margin_negative">
                <div class="card">
                    <div class="card-header borderless">
                        <% if(data.correct >= 16){%>
                            <h1 class="result_message_pass text-success" style="text-align: center;font-weight: bold;">Congratulation</h1>
                        <%}%>
                        <% if(data.correct < 16){%>
                            <h1 class="result_message_fail">Batter luck next time</h1>
                        <%}%>
                    </div>
                    <div  id="content">
                        <div class="card-block">
                                <div class="row">
                                    <div class="col-md-4 margin_top">
                                        <ul>
                                            <li class="result_Correct">Correct : <samp><%= data.correct %></samp></li>
                                            <li class="result_Correct">Incorrect : <samp><%= data.incorrect %></samp></li>
                                        </ul>
                                    </div>
                                    <div class="col-md-8">
                                        <div id="chartContainer" style="height: 270px; width: 100%;"></div> 
                                    </div>
                                </div>
                        </div>
                        <div class="card-header borderless border-top">
                            <div class="result_status">
                                <a href="/test" class="btn btn-primary" >Try again</a>
                                <button class="btn btn-success" onclick="result_show_to_user()" >Test sheet</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Container-fluid ends -->
     </div>
    </div>
    <script type="text/javascript">
        pie_chart('<%= data.correct %>','<%= data.incorrect %>');
    </script>