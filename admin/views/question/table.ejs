<% layout('../layout') %>


<div class="content-wrapper">
    <!-- Container-fluid starts -->
   <div class="container-fluid">
    <!-- Row Starts -->
    <div class="row">
        <div class="col-sm-12 p-0">
            <div class="main-header" style="margin-top: 0px;">
                    <div class="page-header-title">
                        <h3 class="m-b-10">Show Questions</h3>
                    </div>
                <ol class="breadcrumb breadcrumb-title breadcrumb-arrow">
                    <li class="breadcrumb-item"><a href="index.html"><i class="icofont icofont-home"></i></a>
                    </li>
                    <li class="breadcrumb-item"><a href="/">
                            <spam style="color: #fff;">Show</spam></a>
                    </li>
                </ol>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 margin_negative ">
            <div class="card">
                <div class="card-block">
                    <table id="example" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Question</th>
                                <th>Operations</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.forEach((item,index)=>{%>
                                
                                <tr role="row" class="odd" id="<%=item._id%>">
                                    <td tabindex="0" class="sorting_1" style="outline: none;"><%=index+1%></td>
                                    <td class=" dt-body-left"><div style="max-width:600px;"><%=item.question%>
                                    <input type="text" value="<%=item.question%>" hidden name="Question">
                                    <input type="text" value="<%=item.option0%>" hidden name="option1">
                                    <input type="text" value="<%=item.option1%>" hidden name="option2">
                                    <input type="text" value="<%=item.option2%>" hidden name="option3">
                                    <input type="text" value="<%=item.option3%>" hidden name="option4">
                                    <input type="text" value="<%=item._id%>" hidden name="id">
                                    <input type="text" value="<%=item.answer%>" hidden name="ans"></td> 
                                    <td><a href="/admin/question/Edit?id=<%=item._id%>" >Edit</a> / <a href="javaScript:void(0)"  onclick="deleteAjax('<%=item._id%>','<%=item.question%>')">Delete</a></td>
                                </tr>
                            <%})%>
                        </tbody>
                    </table>
                </div> 
            </div>
        </div>
    </div>
    <!-- Container-fluid ends -->
 </div>
</div>
 
 </script>